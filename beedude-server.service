[Unit]
Description=Beedude server
Requires=network.target redis.service
After=network.target redis.service

[Service]
User=beesolutions
Group=beesolutions
WorkingDirectory=/opt/bee/beedude
ExecStart=/opt/bee/beedude/venv/bin/gunicorn --access-logfile - --workers 3 --bind unix:/opt/bee/beedude/beedude-server.sock beesoft.wsgi:application

[Install]
WantedBy=multi-user.target